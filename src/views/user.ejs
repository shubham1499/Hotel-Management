<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
  <link rel="icon" type="image/png" href="../assets/img/favicon.png">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title>
    New Entry
  </title>
  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
  <!--     Fonts and icons     -->
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
  <!-- CSS Files -->
  <link href="../assets/css/bootstrap.min.css" rel="stylesheet" />
  <link href="../assets/css/paper-dashboard.css?v=2.0.1" rel="stylesheet" />
  <link rel="stylesheet" type="text/css" href="../assets/css/datepicker.css">
</head>

<body class="">
  <div class="wrapper ">
    <%- include ("../views/partials/sidebar.ejs") %>

    <div class="main-panel">
      <%- include ("../views/partials/header.ejs") %>
        
      <div class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="alert alert-success alert-dismissible fade show">
              <button type="button" aria-hidden="true" class="close" data-dismiss="alert" aria-label="Close">
                <i class="nc-icon nc-simple-remove"></i>
              </button>
              <span><b> Success - </b> This is a regular notification made with ".alert-success"</span>
            </div>
            <div class="card card-user">
              <div class="card-header">
                <h5 class="card-title">New Entry</h5>
              </div>
              <div class="card-body">
                <form method="POST" action="/saveEntry">
                  <fieldset>
                  <div class="row">
                    <div class="col-md-2 pr-1">
                      <div class="form-group">
                        <label>Reg Id.</label>
                        <input name="txtSrNo" type="number" class="form-control" placeholder="No." value=<%=EntryId%>>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-3 pr-1">
                      <div class="form-group">
                        <label>First Name</label>
                        <input name="txtFirstName" type="text" class="form-control" placeholder="First Name" value="Chet">
                      </div>
                    </div>
                    <div class="col-md-3 pl-1">
                      <div class="form-group">
                        <label>Last Name</label>
                        <input name="txtLastName" type="text" class="form-control" placeholder="Last Name" value="Faker">
                      </div>
                    </div>
                    <div class="col-md-2 pl-1">
                      <div class="form-group">
                        <label>Age</label>
                        <input name="txtAge" type="number" class="form-control" placeholder="Age" value="10">
                      </div>
                    </div>
                    <div class="col-md-2 pl-1">
                      <div class="form-group">
                        <label>Sex</label>
                        <br>
                        <label style="font-size:15px;" class="radio-inline"><input style="height:15px; width:15px" type="radio" name="txtSex" value="M">  Male</label>
                        <br>
                        <label style="font-size:15px;" class="radio-inline"><input style="height:15px; width:15px" type="radio" name="txtSex" value="F">  Female</label>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-3 pr-1">
                      <div class="form-group">
                        <label>Mobile</label>
                        <input name="txtMobileNo" type="number" class="form-control" placeholder="Enter Mobile Number">
                      </div>
                    </div>
                    <div class="col-md-3 pr-1">
                        <div class="form-group">
                          <label>Date of Birth (dd/mm/yyyy)</label>
                          <input name="txtDOB" id="datepicker1" class="form-control" placeholder="Enter Date of Birth">
                        </div>
                    </div>
                  </div>
                  <hr style="color:black;background-color:grey;">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Address</label>
                        <input name="txtAddress" type="text" class="form-control" placeholder="Home Address" value="Melbourne, Australia">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-3 pr-1">
                      <div class="form-group">
                        <label>City</label>
                        <input name="txtCity" type="text" class="form-control" placeholder="City" value="Melbourne">
                      </div>
                    </div>
                    <div class="col-md-3 pr-1">
                      <div class="form-group">
                        <label>State</label>
                        <input name="txtState" type="text" class="form-control" placeholder="State" value="Melbourne">
                      </div>
                    </div>
                    <div class="col-md-3 pr-1">
                      <div class="form-group">
                        <label>Country</label>
                        <input name="txtCountry" type="text" class="form-control" placeholder="Country" value="Australia">
                      </div>
                    </div>
                    <div class="col-md-2 px-1">
                      <div class="form-group">
                        <label>Postal Code</label>
                        <input name="txtPostalCode" type="number" class="form-control" placeholder="ZIP Code">
                      </div>
                    </div>
                  </div>
                  
                  <div class="row">
                    <div class="col-md-4 pr-1">
                      <div class="form-group">
                        <label>Profession At Present</label>
                        <input name="txtProfession" type="text" class="form-control" placeholder="Profession">
                      </div>
                    </div>
                    <div class="col-md-3 pr-1">
                      <div class="form-group">
                        <label>No of persons</label>
                        <input name="txtPersons" type="number" class="form-control" placeholder="No of persons">
                      </div>
                    </div>
                    <div class="col-md-4 pr-1">
                      <div class="form-group">
                        <label>Reason for Visit</label>
                        <input name="txtReason" type="text" class="form-control" placeholder="Reason for visit">
                      </div>
                    </div>
                  </div>
                  <hr style="color:black;background-color:grey;">

                  <div class="row">
                    <div class="col-md-4 pr-1">
                      <div class="form-group">
                        <label>Arrival Date(dd/mm/yyyy)</label>
                        <input name="txtArrivalDate" id="datepicker2" type='text' class="form-control" placeholder="Select date" >
                      </div>
                    </div>
                    <div class="col-md-2 pr-1">
                      <div class="form-group">
                        <label>Arrival Time</label>
                        <input name="txtArrivalTime" id="timepicker" type="text" class="form-control timepicker">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4 pr-1">
                      <div class="form-group">
                        <label>From here visitor tends to visit</label>
                        <input name="txtDestination" type="text" class="form-control" placeholder="Destination">
                      </div>
                    </div>
                    <div class="col-md-4 pr-1">
                      <div class="form-group">
                        <label>Approx Stay</label>
                        <input name="txtStay" type="number" class="form-control" placeholder="No. of days">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-1 pr-1">
                      <div class="form-group">
                        <label>Rooms</label>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="container">
                        <div class='element' id='div_1'>
                          <input name="txtRoom" type='number' placeholder='Enter room number' id='txt_1' >&nbsp;<span type="button" class='add'>Add room</span>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-2 pr-1">
                      <div class="form-group">
                        <label>Amount</label>
                        <input name="txtAmount" type="number" class="form-control" placeholder="Total Amount">
                      </div>
                    </div>
                  </div>
                  <hr style="color:black;background-color:grey;">
                  <div class="row">
                    <div class="update ml-auto mr-auto">
                      <button id="btnSubmit" type="submit" class="btn btn-primary btn-round">Submit</button>
                    </div>
                  </div>
                </fieldset>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- include ("../views/partials/footer.ejs") %>
    </div>
  </div>
  <!--   Core JS Files   -->
  <script src="../assets/js/core/jquery.min.js"></script>
  <script src="../assets/js/core/popper.min.js"></script>
  <script src="../assets/js/core/bootstrap.min.js"></script>
  <script src="../assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
  <script src="../assets/js/plugins/bootstrap-datepicker.js"></script>
  <!--  Google Maps Plugin    -->
  <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
  <!-- Chart JS -->
  <script src="../assets/js/plugins/chartjs.min.js"></script>
  <!--  Notifications Plugin    -->
  <script src="../assets/js/plugins/bootstrap-notify.js"></script>
  <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="../assets/demo/demo.js"></script>
  <!-- TimePicker And DatePicker -->
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>  
  <script src="https://rawgit.com/creativetimofficial/material-kit/master/assets/js/plugins/moment.min.js"></script>
  <script src="https://rawgit.com/creativetimofficial/material-kit/master/assets/js/plugins/bootstrap-datetimepicker.js"></script>
</body>
    <script type="text/javascript">
              $('#datepicker1').datepicker({format:"dd/mm/yyyy"});
              $('#datepicker2').datepicker({format:"dd/mm/yyyy"});
              $('.timepicker').datetimepicker({
                    format: 'h:mm A',    //use this format if you want the 12hours timpiecker with AM/PM toggle
                    icons: {
                        up: "fa fa-chevron-up",
                        down: "fa fa-chevron-down",  
                    }
              });
              // Add new element
              $(".add").click(function(){
                    // Finding total number of elements added
                    var total_element = $(".element").length;
                    // last <div> with element class id
                    var lastid = $(".element:last").attr("id");
                    var split_id = lastid.split("_");
                    var nextindex = Number(split_id[1]) + 1;
                    var max = 20;
                    // Check total number elements
                    if(total_element < max ){
                      // Adding new div container after last occurance of element class
                      $(".element:last").after("<div class='element' id='div_"+ nextindex +"'></div>");
                      // Adding element to <div>
                      $("#div_" + nextindex).append("<input name='txtRoom' type='number' placeholder='Enter room number' id='txt_"+ nextindex +"'>&nbsp;<span type='button' id='remove_" + nextindex + "' class='remove'>X</span>");
                    }
              });
              // Remove element
              $('.container').on('click','.remove',function(){
                  var id = this.id;
                  var split_id = id.split("_");
                  var deleteindex = split_id[1];
                  // Remove <div> with id
                  $("#div_" + deleteindex).remove();
              });
        
    </script>
</html>